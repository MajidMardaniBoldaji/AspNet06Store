@model Product

<div class="card card-group">
    <h4>@Model.Name<span><small>@Model.Price</small></span></h4>
    <form asp-controller="Basket" asp-action="AddToBasket" method="post">
        <input type="hidden"  value="@Model.ID" name="productId"/>
        <input type="hidden" value="Home/Index" name="returnUrl" />
        <input type="submit" value="Add To basket" />

    </form>
    <p>@Model.Description</p>
</div>